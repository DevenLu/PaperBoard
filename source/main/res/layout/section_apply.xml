                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_med" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnova"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/list_item_height"
